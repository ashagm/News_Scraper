{{!-- {{result}} --}}
<div class="container">
  <div class="row">
    <div class="col-md-11">
        <h3>Enter Your Comments<h3>
        <a href="{{result.link}}"><h2>{{result.headline}}</h2></a>
    </div>
    <div class="col-md-1">
        <a href="/articles" class="btn btn-info" style="padding: 20px"> BACK </a>
    </div>
  </div>

<div class="row">
<div class="col-md-12">
 <form method="POST" action="/articles/{{result._id}}">
    <div class="form-group row">
      <label for="name" class="col-form-label">Title</label>
      <input class="form-control" type="text" name="title" id="title" required>
    </div>
    <div class="form-group row">
      <label for="body">Message</label>
      <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
 </div> 
</div>

<BR><br>
<h3>Previous Comments: </h3>

{{#each result.comments as |comment|}}
 <div class="row row-comment">
    <div class="col-md-11">
         Title : {{comment.title}} <br>
         Comment : {{comment.content}}
     </div>
     <div class="col-md-1">
        <a href="/comments/delete/{{../result._id}}/{{comment._id}}"><i class="fa fa-2x fa-trash"></i></a>
     </div> 
  </div>
 {{/each}}

 </div>